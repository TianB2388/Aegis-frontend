import { useState } from "react";
import { Switch } from "@/components/ui/switch";
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";

export default function SafePayClient() {
  const [insuranceEnabled, setInsuranceEnabled] = useState(false);
  const [amount, setAmount] = useState(0);

  const handleToggleInsurance = (enabled: boolean) => {
    setInsuranceEnabled(enabled);
  };

  const handleSubmit = async () => {
    const payload = {
      transaction_id: `TX-${Date.now()}`,
      amount: amount,
      insured: insuranceEnabled,
      insurance_fee: (amount * 0.02).toFixed(2),
    };

    const res = await fetch("http://localhost:5000/api/insure", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload),
    });

    const data = await res.json();
    console.log("Server response:", data);
    alert("Payment protected successfully.");
  };

  return (
    <div className="max-w-md mx-auto p-6">
      <Card>
        <CardContent className="p-4">
          <h2 className="text-lg font-semibold mb-4">Protect Your Payment</h2>

          <label className="text-sm block mb-2">Enter Payment Amount (R)</label>
          <input
            type="number"
            className="border rounded-md px-3 py-2 w-full mb-4"
            placeholder="e.g. 5000"
            onChange={(e) => setAmount(Number(e.target.value))}
            onFocus={(e) => e.target.select()}
            value={amount === 0 ? "" : amount}
          />

          <div className="flex items-center justify-between mb-4">
            <span className="text-sm font-medium">Add Aegis Insurance (2%)</span>
            <Switch
              id="insurance"
              checked={insuranceEnabled}
              onCheckedChange={handleToggleInsurance}
            />
          </div>

          {insuranceEnabled && (
            <div className="text-xs text-muted-foreground mb-4">
              <p>Total Fee: R{(amount * 0.02).toFixed(2)}</p>
            </div>
          )}

          <Button onClick={handleSubmit} className="w-full">
            Proceed to Payment
          </Button>
        </CardContent>
      </Card>
    </div>
  );
}

