import { useState } from "react";

export default function SafePayClient() {
  const [insuranceEnabled, setInsuranceEnabled] = useState(true);
  const [amount, setAmount] = useState<number>(0);

  const insuranceFee = (amount * 0.02).toFixed(2); // 2% fee

  const handleAmountChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    const value = e.target.value.replace(/^0+/, ""); // remove leading 0s
    const numeric = parseFloat(value);
    setAmount(isNaN(numeric) ? 0 : numeric);
  };

  const handleToggle = () => {
    setInsuranceEnabled(!insuranceEnabled);
  };

  return (
    <div className="min-h-screen flex flex-col items-center justify-center bg-gray-50 p-6">
      <div className="bg-white rounded-2xl shadow-md w-full max-w-md p-6 space-y-6">
        <h1 className="text-2xl font-semibold text-center text-gray-800">SafePay Protection</h1>

        <div>
          <label className="block text-sm font-medium text-gray-700 mb-1">Payment Amount (ZAR)</label>
          <input
            type="number"
            className="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none"
            value={amount === 0 ? "" : amount}
            onChange={handleAmountChange}
            placeholder="Enter amount"
            min="0"
          />
        </div>

        <div className="flex items-center justify-between">
          <span className="text-sm text-gray-700 font-medium">Enable Aegis Protection (2%)</span>
          <label className="switch">
            <input type="checkbox" checked={insuranceEnabled} onChange={handleToggle} />
            <span className="slider"></span>
          </label>
        </div>

        {insuranceEnabled && (
          <div className="text-sm text-green-700 font-medium bg-green-100 p-3 rounded-lg mt-2">
            Aegis enabled. Insurance cost: <strong>R{insuranceFee}</strong>
          </div>
        )}
      </div>

      <style>
        {`
        .switch {
          position: relative;
          display: inline-block;
          width: 44px;
          height: 24px;
        }
        .switch input {
          opacity: 0;
          width: 0;
          height: 0;
        }
        .slider {
          position: absolute;
          cursor: pointer;
          top: 0; left: 0;
          right: 0; bottom: 0;
          background-color: #ccc;
          transition: 0.4s;
          border-radius: 34px;
        }
        .slider:before {
          position: absolute;
          content: "";
          height: 18px; width: 18px;
          left: 3px;
          bottom: 3px;
          background-color: white;
          transition: 0.4s;
          border-radius: 50%;
        }
        input:checked + .slider {
          background-color: #0a66c2;
        }
        input:checked + .slider:before {
          transform: translateX(20px);
        }
      `}
      </style>
    </div>
  );
}


