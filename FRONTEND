// Frontend: React with Tailwind CSS
import { useState } from "react";
import { Switch } from "@/components/ui/switch"; // âœ… Make sure this import path matches your component structure
import { Button } from "@/components/ui/button";

export default function ClientInsurancePage() {
  const [amount, setAmount] = useState(0);
  const [insuranceEnabled, setInsuranceEnabled] = useState(false);

  const insuranceFee = amount * 0.02;

  const handleSubmit = async () => {
    try {
      const response = await fetch("http://localhost:5000/api/payment", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          amount,
          insured: insuranceEnabled,
          insurance_fee: insuranceFee,
        }),
      });
      const data = await response.json();
      alert("Payment submitted: " + JSON.stringify(data));
    } catch (err) {
      alert("Error submitting payment");
      console.error(err);
    }
  };

  return (
    <div className="p-6 max-w-md mx-auto">
      <h2 className="text-2xl font-semibold mb-4">Secure Your Payment</h2>

      <label className="block mb-2 text-sm">Enter Amount (ZAR):</label>
      <input
        type="number"
        className="border border-gray-300 p-2 rounded w-full mb-4"
        value={amount}
        onChange={(e) => setAmount(parseFloat(e.target.value))}
      />

      <div className="flex items-center justify-between mb-4">
        <label className="text-sm">Add 2% insurance (R{insuranceFee.toFixed(2)})</label>
        <Switch
          checked={insuranceEnabled}
          onCheckedChange={setInsuranceEnabled}
        />
      </div>

      <Button onClick={handleSubmit} className="w-full">
        Pay Now
      </Button>
    </div>
  );
}

